@model WebApplication2.Models.Book
@{
    ViewData["Title"] = "create";
}

<h1>create</h1>
@*BeginForm un içini boş bırakırsak varsayılan olarak Books un içindeki create e gider..*@
@using (Html.BeginForm())
{
<div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.baslik, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(Model => Model.baslik, null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.aciklama, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.aciklama, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.tur, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.DropDownListFor(Model => Model.tur, ViewData["tur"] as SelectList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.fiyat, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.fiyat, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.stokadedi, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.TextAreaFor(Model => Model.stokadedi, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.discontinued, new { @class = "control-label col-md-2" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(Model => Model.discontinued, new { @class = "form-control" })
        </div>
    </div>


    <button type="submit" class="btn btn-default">Kitap Ekle</button>

</div>
}
