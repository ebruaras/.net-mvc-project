@*ViewData kullanımı*@
@{
    var book = (WebApplication2.Models.Book)ViewData["book"];
    ViewData["Title"] = "Detay";
}

<h1>Detay</h1>

<h3 id="description">
    <a href="#description" style="font-family:Arial font; font-style:normal"> </a>
    @book.baslik
</h3>
<p></p>
<dl class="dl-horizontal">
    <dt>Kitabın türü:</dt>
    <dd>@book.tur</dd>

    <dt>Fiyat:</dt>
    <dd>@book.fiyat</dd>

    <dt>Açıklama:</dt>
    <dd>@book.aciklama</dd>

    <dt>Stok adedi:</dt>
    <dd>@book.stokadedi</dd>

    <dt>Yayın tarihi:</dt>
    <dd>@book.yayintarihi</dd>
</dl>